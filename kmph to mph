# convert KMPH to and from MPH
def kmph_to_mph(kmph):
    mph = (kmph * 0.621371)
    return(mph)
    
def mph_to_kmph(mph):
    kmph = (mph * 1.60934)
    return(kmph)
    
kmph_or_mph = (input("Do you want to convert to kmph or mph?"))    
if kmph_or_mph == "mph":
    kmph = float(input("What is the kilometers per hour? "))
    print(str(kmph) + " kilometers per hour is equal to " + str(kmph_to_mph(kmph)) + " mph.")
elif kmph_or_mph == "kmph":
    mph = float(input("What is the miles per hour?"))
    print(str(mph) + " miles per hour is equal to " + str(mph_to_kmph(mph)) + " kilometers per hour.")
else:
    exit

# convert KMPH to American the long way
def long_kmph_to_mph(kmph):
    kilometers = (kmph * 60)
    miles = (kilometers * .621371)
    mph = (miles / 60)
    return(mph)

kmph = float(input("What is the kilometers per hour? "))
print (long_kmph_to_mph(kmph))
